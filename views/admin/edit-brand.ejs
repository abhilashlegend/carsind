<%- include('../includes/admin/header.ejs') %>

<%- include('../includes/admin/sidebar.ejs') %>
<div class="main-wrapper">

    <%- include('../includes/admin/navigation.ejs') %>

    <!-- ! Main -->
    <main class="main users chart-page" id="skip-target">
        <div class="container">
          <h2 class="main-title">Edit Brand</h2>

          <div class="row">
            <div class="col-md-6 col-sm-4">
                <form method="post" action="/admin/brand/edit-brand">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title </label>
                        <input type="text" class="form-control" id="title" required name="title" value="<%= brand.title %>"  />
                    </div>

                    <div class="mb-3">
                        <label for="logo" class="form-label">Logo</label>
                        <input type="text" class="form-control" id="logo" name="logo" value="<%= brand.logo %>" />
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="description" class="form-control" id="description" cols="30" rows="10"><%= brand.description %></textarea>
                    </div>

                    <div class="mb-3">
                        <input type="hidden" name="id" id="id" value="<%= brand._id %>" />   
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-danger">Reset</button>

                        <a type="button" class="btn btn-secondary" href="/admin/dashboard">Cancel</a>
                    </div>

                </form>
            </div>
          </div>
        </div>
    </main>


<%- include('../includes/admin/footer.ejs') %>    